@{
    ViewData["Title"] = "Product";
}

<div class="container">
    <div class="row">
        <div class="col-9">
            <h3>List sản phẩm</h3>
            <table class="table table-light text-center mt-4 align-middle">
                <thead class="table-dark">
                    <tr>
                        <th width="">#</th>
                        <th width="">Tên</th>
                        <th width="">Giá</th>
                        <th width="">Số lượng</th>
                        <th width="">Mô tả</th>
                        <th width="">Thương hiệu</th>
                        <th width="">Loại</th>
                        <th width="">Ảnh</th>
                        <th width=""></th>
                    </tr>
                </thead>

                <!--Danh sách sản phẩm-->
                <tbody id="product-list">
                </tbody>

            </table>
        </div>
        <div class=" col-3">
            <div class="card shadow-sm mb-3">
                <div class="card-header">
                    <h5 class="mb-0">Tạo sản phẩm</h5>
                </div>

                <!--Form tạo sản phẩm-->
                <div class="card-body">
                    <form class="form">
                        <!--Id ẩn-->
                        <input type="hidden" id="idProduct" />

                        <!--Tên SP-->
                        <div class="form-group mt-2">
                            <label for="name" class="form-label">Tên sản phẩm</label>
                            <input type="text" id="name" class="form-control form-notnull" />
                            <div class="error-message text-danger" style="font-style : italic"></div>
                        </div>

                        <!--Giá SP-->
                        <div class="form-group mt-2">
                            <label for="price" class="form-label">Giá sản phẩm</label>
                            <input type="number" id="price" class="form-control form-notnull" />
                            <div class="error-message text-danger" style="font-style : italic"></div>
                        </div>

                        <!--Số lượng-->
                        <div class="form-group mt-2">
                            <label for="quantity" class="form-label">Số lượng</label>
                            <input type="number" id="quantity" class="form-control form-notnull" />
                            <div class="error-message text-danger" style="font-style : italic"></div>
                        </div>

                        <!--Mô tả-->
                        <div class="form-group mt-2">
                            <label for="description" class="form-label">Mô tả</label>
                            <textarea id="description" class="form-control form-notnull" rows="3" maxlength="500" required></textarea>
                            <div class="error-message text-danger" style="font-style : italic"></div>
                        </div>

                        <!--Thương hiệu-->
                        <div class="form-group mt-2">
                            <label for="brandid" class="form-label">Thương hiệu</label>
                            <select id="brandid" class="form-select" aria-label="Default select example">
                                <option value="" selected>Chọn thương hiệu</option>
                                <option value="1">Apple</option>
                                <option value="2">Samsung</option>
                                <option value="3">MSI</option>
                            </select>
                            <div class="error-message text-danger" style="font-style : italic"></div>
                        </div>

                        <!--Loại-->
                        <div class="form-group mt-2">
                            <label for="categoryid" class="form-label">Loại</label>
                            <select id="categoryid" class="form-select" aria-label="Default select example">
                                <option value="" selected>Chọn loại</option>
                                <option value="3">PC</option>
                                <option value="4">Smart Phone</option>
                                <option value="5">Laptop</option>
                            </select>
                            <div class="error-message text-danger" style="font-style : italic"></div>
                        </div>

                        <!--File ảnh-->
                        <div class="form-group mt-2">
                            <label for="imageFile" class="form-label">Ảnh</label>
                            <input type="hidden" id="imageTextNameFileHidden" class="form-control" />
                            <input class="form-control-plaintext" type="file" id="imageFile" accept="image/*">
                            <div class="error-message text-danger" style="font-style : italic"></div>

                            <div id="imageProduct" class="d-flex justify-content-center mt-2">
                            </div>
                        </div>

                        <!--button create-->
                        <div class="d-flex justify-content-center mt-2">
                            <button id="create" type="button" class="btn btn-success" style="width: 70%">
                                Tạo sản phẩm
                            </button>
                        </div>

                        <!--button trong update-->
                        <div class="d-flex justify-content-center">
                            <!--btn huỷ-->
                            <button id="backToCreate" onclick="resetForm()" type="button" class="btn btn-danger mt-3 me-5" style="width: 40%; display: none">Huỷ</button>

                            <!--btn lưu-->
                            <button id="update" type="button" class="btn btn-warning mt-3" style="width: 40%; display: none">Lưu</button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
<script src="~/js/apiProduct.js"></script>