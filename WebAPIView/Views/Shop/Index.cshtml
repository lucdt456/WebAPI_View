@{
    ViewData["Title"] = "Shop";
}


<!--Table + Create-->
<div class="container">
    <div class="row">
        <div class="col-9">
            <h3>List sản phẩm</h3>
            <table class="table table-light text-center mt-4" id="product-table">
            </table>
        </div>
        <div class="col-3">
            <h3>Tạo sản phẩm</h3>
            <form class="form">
                <div class="form-group mt-3">
                    <input id="index" type="hidden">
                </div>
                <div class="form-group mt-3">
                    <label for="name" class="form-label">Tên: </label>
                    <input type="text" id="name" class="form-control" />
                    <div class="error-message text-danger"></div>
                </div>

                <div class="form-group mt-3">
                    <label for="price" class="form-label">Giá: </label>
                    <input type="text" id="price" class="form-control" />
                    <div class="error-message text-danger"></div>
                </div>

                <div class="form-group mt-3">
                    <label for="quantity" class="form-label">Số lượng: </label>
                    <input type="text" id="quantity" class="form-control" />
                    <div class="error-message text-danger"></div>
                </div>

                <button id="create" type="button" onclick="addNew()" class="btn btn-success mt-3 mb-3">Tạo sản phẩm mới</button>
                <button id="update" type="button" onclick="updateProduct()" class="btn btn-warning mt-3 mb-3" style="float: right; display: none">Update</button>
            </form>
        </div>
    </div>
</div>

<!--Footer-->
<div class="card text-center">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
                <a class="nav-link active" aria-current="true" href="#">Active</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Link</a>
            </li>
            <li class="nav-item">
                <a class="nav-link disabled" aria-disabled="true">Disabled</a>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <h5 class="card-title">Special title treatment</h5>
        <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
        <a href="#" class="btn btn-primary">Go somewhere</a>
    </div>
</div>
<script src="~/js/script1.js"></script>